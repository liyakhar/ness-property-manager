echo "🔍 Running pre-push checks..."

# Run TypeScript type checking
echo "📝 Checking TypeScript types..."
npm run type

# Run linting
echo "🔧 Running linter..."
npm run lint

# Run build check (skip environment-dependent parts)
echo "🏗️  Running build check..."
NEXT_PUBLIC_SUPABASE_URL=dummy NEXT_PUBLIC_SUPABASE_ANON_KEY=dummy npx next build --no-lint

echo "✅ Pre-push checks passed!"
